@using RazorEngine.Text
@using QTD2.Infrastructure.Reports.Generation
@using QTD2.Infrastructure.ExtensionMethods
@using System.Text.RegularExpressions
<style>

    .table {
        font-family: Roboto, "Helvetica Neue", sans-serif;
        color: #000;
        border-collapse: collapse;
        width: 100%;
    }

        .table .sub-title {
            font-family: inherit;
        }

    a.pagerNumber {
        text-decoration: none;
        background-color: white;
        color: black;
    }

        a.pagerNumber:hover {
            text-decoration: none;
            background-color: cornflowerblue;
            color: white;
        }

    .strip {
        margin: 10px 0px;
    }

    .strip-container .strip-dark {
        height: 10px;
        background-color: #e8e8e8;
    }

    tr.open-border-table-row td{
        border-bottom:1px solid black;
        padding:12px 4px;
    }

    .expired-row {
        color: lightgray;
        font-style: italic;
    }

    @@media print {
        .pager {
            display: none !important;
        }

        .strip-container .strip-dark {
            background-color: white;
        }
    }
</style>

<table id="content-table" class="table @(Model.Positions.Count()>5 ? "landscape-report":"")" style="border-collapse: collapse; width:100%;margin:auto">
    <tr>
        <td colspan="12" style="vertical-align: middle; text-align: center; border: none !important;padding-bottom:0px">
            <div class="repeatedReportHeader" style="border-bottom: 3px solid #020378;padding-bottom:1px">
                <div style="display: -webkit-box; display: flex; align-items: center; -webkit-box-pack: justify; justify-content: space-between; border-bottom: 3px solid #020378;">
                    @if (!string.IsNullOrEmpty(Model.CompanyLogo))
                    {
                        <div style="width:18%">
                            <img src="@Model.CompanyLogo" alt="Company logo" style="height: 46px; width: 150px !important; height: 65px !important; object-fit: scale-down !important;" />
                        </div>
                    }
                    else
                    {
                        <div style="width:20%"></div>
                    }
                    <div style="width:60%">
                        <div style="text-align: center; font-size: 20px; color: #020378;padding-bottom: 7px;"><b>@Model.Title </b></div>
                    </div>
                    <div style="text-align:right;width:22%;"><b>Printed Date:</b> @DateTime.Now.ConvertToDefaultTimeZone(Model.DefaultTimeZone).ToShortDateString()</div>
                </div>
            </div>
        </td>
    </tr>


    @if (Model.SafetyHazards.Count() > 0 && Model.Positions.Count() > 0)
    {
        <tr>
            <td colspan="12" style="border: 0; padding: 0;padding-top:20px" class="strip-container">
                <table style="width:100%;border-collapse: collapse;">
                    <thead>
                        <tr class="open-border-table-row">
                            <th style="border: 1px solid #000; text-align: center;width:10%">
                                No.
                            </th>
                            <th style="border: 1px solid #000; text-align: center;width:40%">
                                @("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements))
                            </th>
                            @foreach (var pos in Model.Positions)
                            {
                                <th style="border: 1px solid #000; text-align: center;width:@(50/Model.Positions.Count())%">
                                    @pos.PositionAbbreviation
                                </th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sH in Model.SafetyHazards.OrderBy(r =>
                       {
                           var match = Regex.Match(r.Number, @"^\d+");
                           if (match.Success)
                           {
                               return int.Parse(match.Value);
                           }
                           else
                           {
                               return int.MaxValue;
                           }
                       }))
                        {
                            <tr class="open-border-table-row @(sH.Active ? "" : "expired-row")">
                                <td style="border: 1px solid #000;text-align: center;">@sH.Number</td>
                                <td style="border: 1px solid #000;text-align: center;">@sH.Title</td>
                                @foreach (var pos in Model.Positions)
                                {
                                    <td style="border: 1px solid #000;text-align: center;">
                                        @(sH.HasPosition(pos.Id) ? "X" : "")
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </td>
        </tr>
    }
    else
    {
        <tr style="border:none">
            <td style="border:none;text-align:center">
                <i>No data available to generate requested report</i>
            </td>
        </tr>
    }
</table>
