@using RazorEngine.Text
@using QTD2.Infrastructure.Reports.Generation
@using QTD2.Infrastructure.ExtensionMethods
@using QTD2.Domain.Helpers;
@using QTD2.Infrastructure.Model.ILA
<style>
    .table {
        width: 100%;
        font-family: Roboto, "Helvetica Neue", sans-serif;
    }

    .table-wrapper-list ul {
        padding: 0 0 0 20px;
        list-style: none;
    }

    a.pagerNumber {
        text-decoration: none;
        background-color: white;
        color: black;
    }

        a.pagerNumber:hover {
            text-decoration: none;
            background-color: cornflowerblue;
            color: white;
        }

    .strip {
        margin: 10px 0px;
    }

    .strip-container .strip-dark {
        height: 10px;
        background-color: #e8e8e8;
    }

    @@media print {
        .pager {
            display: none !important;
        }

        .strip-container .strip-dark {
            background-color: white;
        }
    }

    .expired-row {
        color: gray;
        font-style: italic;
    }

        .expired-row table tr {
            color: gray;
            font-style: italic;
        }

    .active-sh {
        color: #567DFF;
    }

    sH-sets * {
        margin: 0 !important;
        padding: 0 !important;
    }

    .sH-sets p {
        margin: 0 !important;
        padding: 0 !important;
        display: inline;
    }

    .sH-sets img {
        width: 400px !important;
        height: auto !important;
        display: block !important;
        padding: 0 !important;
        margin: 0 !important;
        object-fit: cover;
        overflow: hidden;
    }

    .sH-sets ul, .sH-sets ol {
        margin: 0 !important;
        padding: 0 0 0 0px !important;
        list-style-position: inside !important;
    }

    .sH-sets figure {
        padding: 0 !important;
        margin: 0 !important;
    }

    .sH-sets li {
        margin: 0 !important;
        padding: 0 !important;
    }

    .sH-sets figure img {
        width: 200px !important;
        height: auto !important;
        display: block !important;
        padding: 0 !important;
        margin: 0 !important;
        object-fit: cover;
        overflow: hidden;
        vertical-align: top;
    }
</style>

<table id="content-table" class="table" style="border-collapse: collapse; width:98%;margin:auto;">
    <tr>
        <td colspan="12" style="vertical-align: middle; margin:0  !important;text-align: center; border: none !important;padding-bottom:0px">
            <div class="repeatedReportHeader" style="border-bottom: 3px solid #020378;padding-bottom:1px">
                <div style="display: -webkit-box; display: flex; align-items: center; -webkit-box-pack: justify;-webkit-box-align:center; border-bottom: 3px solid #020378;padding-top:10px;">
                    @if (!string.IsNullOrEmpty(Model.CompanyLogo))
                    {
                        <div style="width: 25%;">
                            <img src="@Model.CompanyLogo" alt="Company logo" style="height: 46px;width: 65px;padding-bottom: 10px;float: left;width: 150px !important;height: 65px !important;object-fit: scale-down !important;" />
                        </div>
                    }
                    else
                    {
                        <div style="width: 20%;"></div>
                    }
                    <div style="width: 50%; text-align: center; font-size: 24px; color: #020378;">
                        <b>@Model.Title </b>
                    </div>
                    <div style="width: 25%;text-align: right;"><b>Printed Date:</b> @DateTime.Now.ConvertToDefaultTimeZone(Model.DefaultTimeZone).ToShortDateString()</div>
                </div>
            </div>
        </td>
    </tr>

    @if (Model.SaftyHazards.Count() > 0)
    {
        <tr>
            <td style="border:none;padding-top:0;" class="strip-container" colspan="12">
                @{
                    int j = 1;
                }
                @foreach (var safetyHazard in Model.SaftyHazards)
                {
                    <div class="@(j % 2 == 0 ? "strip-dark" : "")"></div>
                    <div style="padding:5px;" id="@("page" + j)" class="@(j % 2 == 0 ? "strip" : "")">
                        <table>
                            @if (Model.DisplayColumns.Contains("Category"))
                            {
                                <tr>
                                    <td style="border: none !important; font-size: 1rem; padding: 10px; vertical-align: top; font-weight: 700;" colspan="1">
                                        Category:
                                    </td>
                                    <td style="border: none !important; font-size: 1rem; padding: 10px; vertical-align: top;" colspan="11">
                                        @safetyHazard?.SaftyHazard_Category?.Title
                                    </td>
                                </tr>
                            }
                            @if (Model.DisplayColumns.Contains("Safety Hazard No."))
                            {
                                <tr>
                                    <td style="border: none !important; font-size: 1rem; padding: 10px; vertical-align: top; font-weight: 700;" colspan="1">
                                        @("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements)) #:
                                    </td>
                                    <td style="border: none !important; font-size: 1rem; padding: 10px; vertical-align: top;" colspan="11">
                                        @safetyHazard?.Number
                                    </td>
                                </tr>
                            }
                            @if (Model.DisplayColumns.Contains("Safety Hazard Title"))
                            {
                                <tr>
                                    <td style="border: none !important; font-size: 1rem; padding: 10px; vertical-align: top; font-weight: 700;" colspan="1">
                                        @("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements)) Name:
                                    </td>
                                    <td style="border: none !important; font-size: 1rem; padding: 10px; vertical-align: top;" colspan="11">
                                        @safetyHazard?.Title
                                    </td>
                                </tr>
                            }

                            @if (Model.IncludeSafetyHazardsDetail == true)
                            {
                                <tr class="@(safetyHazard?.Active==true ? "" :"expired-row")">
                                    <td style="border: none;width:15%"></td>
                                    <td style="border: none;padding-top:10px;font-size:18px;padding-left:0;padding-bottom:3px;width:85%;text-decoration:underline;border-top:2px solid #000;color: #2D8ACB;"><b>@("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements)) Details</b></td>
                                </tr>
                                <tr class="@(safetyHazard?.Active==true ? "" :"expired-row")">
                                    <td style="border: none;width:15%"></td>
                                    <td style="border: none;padding-top:10px;font-size:16px;padding-left:0;padding-bottom:8px;width:85%" colspan="12">
                                        <span style="font-weight:700;">@("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements)) Description:</span>
                                    </td>
                                </tr>

                                @if (safetyHazard?.Text != null)
                                {
                                    <tr class="@(safetyHazard?.Active==true ? "" :"expired-row")">
                                        <td style="border: none;width:15%"></td>
                                        <td style="border: none;padding-top:10px;font-size:16px;padding-left:0;padding-bottom:8px;width:85%" colspan="12">
                                            <span class="sH-sets">@(new RawString(safetyHazard?.Text))</span>
                                        </td>
                                    </tr>
                                }
                                <tr class="@(safetyHazard?.Active==true ? "" :"expired-row")">
                                    <td style="border: none;width:15%"></td>
                                    <td style="border: none;padding-top:10px;padding-left:0;font-size:16px;padding-bottom:8px;width:85%" colspan="12">
                                        <span style="font-weight:700;">@("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements)) Controls:</span>
                                    </td>
                                </tr>

                                @if (safetyHazard?.SafetyHazard_Set_Links.Count() > 0)
                                {
                                    @foreach (var (sHSetLink, index) in safetyHazard?.SafetyHazard_Set_Links.Select((link, idx) => (link, idx)))
                                    {
                                        <tr class="@(safetyHazard?.Active==true ? "" :"expired-row") excel-not-skip">
                                            <td style="border: none;width:15%"></td>
                                            <td style="border: none;padding-top:10px;font-size:16px;padding-left:20px;padding-bottom:8px;width:85%;" colspan="12">
                                                <span style="padding-right:5px;">@(index + 1).</span><span class="sH-sets">@(new RawString(sHSetLink?.SafetyHazardSet?.SafetyHzControlsText))</span>
                                            </td>
                                        </tr>
                                    }
                                }
                                <tr class="@(safetyHazard?.Active==true ? "" :"expired-row")">
                                    <td style="border: none;width:15%"></td>
                                    <td style="border: none;padding-top:10px;font-size:16px;padding-left:0;padding-bottom:8px;width:85%" colspan="12">
                                        <span style="font-weight:700;">@("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements)) Abatements:</span>
                                    </td>
                                </tr>

                                @if (safetyHazard?.SafetyHazard_Set_Links.Count() > 0)
                                {
                                    @foreach (var (sHSetLink, index) in safetyHazard?.SafetyHazard_Set_Links.Select((link, idx) => (link, idx)))
                                    {
                                        <tr class="@(safetyHazard?.Active==true ? "" :"expired-row") excel-not-skip">
                                            <td style="border: none;width:15%"></td>
                                            <td style="border: none;padding-top:10px;font-size:16px;padding-left:20px;padding-bottom:8px;width:85%;" colspan="12">
                                                <span style="padding-right:5px;">@(index + 1).</span><span class="sH-sets">@(new RawString(sHSetLink?.SafetyHazardSet?.SafetyHzAbatementText))</span>
                                            </td>
                                        </tr>
                                    }
                                }
                                <tr class="@(safetyHazard?.Active==true ? "" :"expired-row")">
                                    <td style="border: none;width:15%"></td>
                                    <td style="border: none;padding-top:10px;font-size:16px;padding-left:0;padding-bottom:8px;width:85%" colspan="12">
                                        <span style="font-weight:700">Personal Protective Equipment:</span>
                                    </td>
                                </tr>

                                @if (safetyHazard?.SafetyHazard_Tool_Links.Count() > 0)
                                {
                                    @foreach (var sHTool in safetyHazard?.SafetyHazard_Tool_Links)
                                    {
                                        <tr class="@(safetyHazard?.Active==true ? "" :"expired-row")">
                                            <td style="border: none;width:15%"></td>
                                            <td style="border: none;padding-top:10px;font-size:16px;padding-left:20px;padding-bottom:8px;width:85%;display:-webkit-box;display:flex;" colspan="12">
                                                <span style="padding-right:5px;">@sHTool?.Tool?.Number.</span><span class="sH-sets">@sHTool?.Tool?.Name</span>
                                            </td>
                                        </tr>
                                    }
                                }
                            }

                            <tr>
                                <td style="border: none;"></td>
                                <td style="border: none; padding-top: 10px; font-size: 18px; color: #2D8ACB; padding-left: 0px; padding-bottom: 3px; width: 85%; text-decoration: underline;">
                                    <b>@("Enabling Objective".ReplaceLabel(Model.ClientSettings_LabelReplacements))s linked to @("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements))</b>
                                </td>
                            </tr>
                            @{
                                var safetyHazardLinkedEOIds = safetyHazard?.SafetyHazard_EO_Links.Select(sel => sel.EOID).Distinct().ToList();
                                var enablingObjectivesToShow = Model.EnablingObjectives.Where(eo =>
                                safetyHazardLinkedEOIds.Contains(eo.Id)
                                    && (Model.IncludeMetaEnablingObjectives || !eo.isMetaEO)
                                    && (Model.IncludeSkillQualifications || !eo.IsSkillQualification)
                                    && (Model.IncludeInactiveEnablingObjectives || eo.Active)
                                ).ToList();
                                var shownEOIds = enablingObjectivesToShow.Select(eo => eo.Id).ToList();

                                //Get upstream Meta EOs found by checking for any shown EO linked as a child to a given Meta EO
                                var metaEOsLinkedToDirectlyShownEOs = Model.EnablingObjectives.Where(eo =>
                                    eo.isMetaEO
                                    && eo.EnablingObjective_MetaEO_Links.Select(eml => eml.EOID).Distinct().ToList().Any(eoid => shownEOIds.Contains(eoid))
                                );

                                //Reduce metaEOsLinkedToDirectlyShownEOs to not duplicately include EOs for already directly-linked MetaEOs (in case a Meta EO was both directly-linked, and a parent of a separate directly-linked EO)
                                metaEOsLinkedToDirectlyShownEOs = metaEOsLinkedToDirectlyShownEOs.Where(meo => !shownEOIds.Contains(meo.Id));

                                enablingObjectivesToShow.AddRange(metaEOsLinkedToDirectlyShownEOs);
                            }
                            @foreach (var shownEO in enablingObjectivesToShow.OrderBy(l => l.FullNumber, new AlphaNumericSortHelper()))
                            {
                                <tr class="@(shownEO.Active ? "" : "expired-row")">
                                    <td style="border: none;"></td>
                                    <td style="border: none !important; font-size: 16px; padding-bottom: 7px;padding-left: 20px;" colspan="12">
                                        @shownEO?.FullNumber &nbsp;&nbsp;
                                        @if (Model.DisplayColumns.Contains("Show Meta EO label") && shownEO.isMetaEO)
                                        {
                                            <span style="color: green;"> (META)</span>
                                        }
                                        @if (Model.DisplayColumns.Contains("Show SQ Label") && shownEO.IsSkillQualification)
                                        {
                                            <span style="color: green;"> (SQ)</span>
                                        }
                                        <span>@shownEO?.Description</span>
                                    </td>
                                </tr>

                                @if (Model.DisplayColumns.Contains("Show EOs Linked to Meta EO"))
                                {
                                    var downstreamEOs = Model.EnablingObjectives.Where(eo =>
                                        shownEO.EnablingObjective_MetaEO_Links.Any(eml => eml.EOID == eo.Id)
                                        && (Model.IncludeMetaEnablingObjectives || !eo.isMetaEO)
                                        && (Model.IncludeSkillQualifications || !eo.IsSkillQualification)
                                        && (Model.IncludeInactiveEnablingObjectives || eo.Active)
                                    );
                                    @foreach (var downstreamEO in downstreamEOs.OrderBy(l => l.FullNumber, new AlphaNumericSortHelper()))
                                    {
                                        <tr class="@(downstreamEO.Active == true ? "" : "expired-row")">
                                            <td style="border: none;"></td>
                                            <td style="border: none !important; font-size: 16px; padding-bottom: 7px;padding-left: 50px;" colspan="12">
                                                <span> @downstreamEO.FullNumber &nbsp;&nbsp; </span>
                                                <span>@downstreamEO.Description</span>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                            <tr></tr>
                        </table>
                    </div>
                    @if (!safetyHazard.Equals(Model.SaftyHazards.Last()))
                    {
                        <div style="page-break-after:always"></div>
                        <div class="@(j % 2 == 0 ? "strip-dark" : "")"></div>
                    }
                    @{
                        j++;
                    }

                }
            </td>
        </tr>
    }
    else
    {
        <tr style="border:none">
            <td style="border:none;text-align:center">
                <i>No data available to generate requested report</i>
            </td>
        </tr>
    }
</table>
<div class="pager" style="display: flex; justify-content: flex-start; align-items: center; background-color: white; border-top: 1px solid #d5d3d366; width: 100%; max-width: 100%; overflow-x: auto; position: sticky; bottom: 0; right: 0px; overflow-y: hidden; white-space: nowrap; ">

    @for (int i = 1; i <= Model.SaftyHazards.Count(); i++)
    {
        <a href=@("#page" + i) class="pagerNumber" style="padding:0.9rem;">@i</a>
    }
</div>