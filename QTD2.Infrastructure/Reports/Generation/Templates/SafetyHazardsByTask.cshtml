                                                                        <text>&nbsp;-&nbsp;</text>
                                                                    }
                                                                    @if (Model.DisplayColumns.Contains("Safety Hazard Title") && !string.IsNullOrEmpty(sHLink?.SaftyHazard?.Title))
                                                                    {
                                                                        @sHLink?.SaftyHazard?.Title
                                                                    }
                                                                </span>
                                                            </td>
                                                        </tr>
                                                    }
                                                    @if (Model.IncludeSafetyHazardsDetail == true)
                                                    {
                                                        <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row")">
                                                            <td style="border: none;width:15%;"></td>
                                                            <td style="border: none;padding-top:10px;font-size:18px;padding-left:55px!important;padding-bottom:3px;width:85%;text-decoration:underline;border-top:2px solid #000"><b>@("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements)) Details</b></td>
                                                        </tr>
                                                        <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row")">
                                                            <td style="border: none;width:15%;"></td>
                                                            <td style="border: none;padding-top:10px;font-size:16px;padding-left:55px!important;padding-bottom:8px;width:85%" colspan="12">
                                                                <span style="font-weight:700;">@("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements)) Description:</span>
                                                            </td>
                                                        </tr>
                                                        @if (sHLink?.SaftyHazard?.Text != null)
                                                        {
                                                            <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row")">
                                                                <td style="border: none;width:15%"></td>
                                                                <td style="border: none;padding-top:10px;font-size:16px;padding-left:55px!important;padding-bottom:8px;width:85%" colspan="12">
                                                                    <span class="sH-sets">@(new RawString(sHLink?.SaftyHazard?.Text))</span>
                                                                </td>
                                                            </tr>
                                                        }
                                                        <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row")">
                                                            <td style="border: none;width:15%;"></td>
                                                            <td style="border: none;padding-top:10px;padding-left:55px!important;font-size:16px;padding-bottom:8px;width:85%" colspan="12">
                                                                <span style="font-weight:700;">@("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements)) Controls:</span>
                                                            </td>
                                                        </tr>
                                                        @if (sHLink?.SaftyHazard?.SafetyHazard_Set_Links.Count() > 0)
                                                        {
                                                            @foreach (var (sHSetLink, index) in sHLink?.SaftyHazard?.SafetyHazard_Set_Links.Select((link, idx) => (link, idx)))
                                                            {
                                                                <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row") excel-not-skip">
                                                                    <td style="border: none;width:15%;"></td>
                                                                    <td style="border: none;padding-top:10px;font-size:16px;padding-left:55px!important;padding-bottom:8px;width:85%;" colspan="12">
                                                                        <span style="padding-right:5px;">@(index + 1).</span><span class="sH-sets">@(new RawString(sHSetLink?.SafetyHazardSet?.SafetyHzControlsText))</span>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        }
                                                        <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row")">
                                                            <td style="border: none;width:15%;"></td>
                                                            <td style="border: none;padding-top:10px;font-size:16px;padding-left:55px!important;padding-bottom:8px;width:85%" colspan="12">
                                                                <span style="font-weight:700;">@("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements)) Abatements:</span>
                                                            </td>
                                                        </tr>
                                                        @if (sHLink?.SaftyHazard?.SafetyHazard_Set_Links.Count() > 0)
                                                        {
                                                            @foreach (var (sHSetLink, index) in sHLink?.SaftyHazard?.SafetyHazard_Set_Links.Select((link, idx) => (link, idx)))
                                                            {
                                                                <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row") excel-not-skip">
                                                                    <td style="border: none;width:15%;"></td>
                                                                    <td style="border: none;padding-top:10px;font-size:16px;padding-left:55px!important;padding-bottom:8px;width:85%;" colspan="12">
                                                                        <span style="padding-right:5px;">@(index + 1).</span><span class="sH-sets">@(new RawString(sHSetLink?.SafetyHazardSet?.SafetyHzAbatementText))</span>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        }
                                                        <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row")">
                                                            <td style="border: none;width:15%;"></td>
                                                            <td style="border: none;padding-top:10px;font-size:16px;padding-left:55px!important;padding-bottom:8px;width:85%" colspan="12">
                                                                <span style="font-weight:700">Personal Protective Equipment:</span>
                                                            </td>
                                                        </tr>
                                                        @if (sHLink?.SaftyHazard?.SafetyHazard_Tool_Links.Count() > 0)
                                                        {
                                                            @foreach (var sHTool in sHLink?.SaftyHazard?.SafetyHazard_Tool_Links)
                                                            {
                                                                <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row")">
                                                                    <td style="border: none;width:15%;"></td>
                                                                    <td style="border: none;padding-top:10px;font-size:16px;padding-left:55px!important;padding-bottom:8px;width:85%;display:-webkit-box;display:flex;" colspan="12">
                                                                        <span style="padding-right:5px;">@sHTool?.Tool?.Number.</span><span class="sH-sets">@sHTool?.Tool?.Name</span>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                    @foreach (var sHLink in orderTask.SafetyHazard_Task_Links)
                                    {
                                        @if (sHLink?.SaftyHazard != null)
                                        {

                                            if (Model.DisplayColumns.Contains("Safety Hazard Number") || Model.DisplayColumns.Contains("Safety Hazard Title"))
                                            {
                                                <tr class="@(sHLink?.SaftyHazard?.Active == true ? "active-sh" : "expired-row")">
                                                    <td style="border: none; width:15%" colspan="1"></td>
                                                    <td style="border: none !important; font-size: 1rem; padding: 10px; padding-left:55px!important; display: -webkit-box; display: flex; white-space: nowrap;" colspan="11">

                                                        <span style="font-weight:700;">
                                                            @if (Model.DisplayColumns.Contains("Safety Hazard Number") && !string.IsNullOrEmpty(sHLink?.SaftyHazard?.Number))
                                                            {
                                                                @sHLink?.SaftyHazard?.Number
                                                            }
                                                            @if (Model.DisplayColumns.Contains("Safety Hazard Number") && Model.DisplayColumns.Contains("Safety Hazard Title") && !string.IsNullOrEmpty(sHLink?.SaftyHazard?.Number) && !string.IsNullOrEmpty(sHLink?.SaftyHazard?.Title))
                                                            {
                                                                <text>&nbsp;-&nbsp;</text>
                                                            }
                                                            @if (Model.DisplayColumns.Contains("Safety Hazard Title") && !string.IsNullOrEmpty(sHLink?.SaftyHazard?.Title))
                                                            {
                                                                @sHLink?.SaftyHazard?.Title
                                                            }
                                                        </span>
                                                    </td>
                                                </tr>

                                            }
                                            @if (Model.IncludeSafetyHazardsDetail == true)
                                            {
                                                <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row")">
                                                    <td style="border: none;width:15%"></td>
                                                    <td style="border: none;padding-top:10px;font-size:18px;padding-left:55px!important;padding-bottom:3px;width:85%;text-decoration:underline;border-top:2px solid #000"><b>@("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements)) Details</b></td>
                                                </tr>
                                                <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row")">
                                                    <td style="border: none;width:15%"></td>
                                                    <td style="border: none;padding-top:10px;font-size:16px;padding-left:55px!important;padding-bottom:8px;width:85%" colspan="12">
                                                        <span style="font-weight:700;">@("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements)) Description:</span>
                                                    </td>
                                                </tr>
                                                @if (sHLink?.SaftyHazard?.Text != null)
                                                {
                                                    <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row")">
                                                        <td style="border: none;width:15%"></td>
                                                        <td style="border: none;padding-top:10px;font-size:16px;padding-left:55px!important;padding-bottom:8px;width:85%" colspan="12">
                                                            <span class="sH-sets">@(new RawString(sHLink?.SaftyHazard?.Text))</span>
                                                        </td>
                                                    </tr>
                                                }
                                                <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row")">
                                                    <td style="border: none;width:15%"></td>
                                                    <td style="border: none;padding-top:10px;padding-left:55px!important;font-size:16px;padding-bottom:8px;width:85%" colspan="12">
                                                        <span style="font-weight:700;">@("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements)) Controls:</span>
                                                    </td>
                                                </tr>
                                                @if (sHLink?.SaftyHazard?.SafetyHazard_Set_Links.Count() > 0)
                                                {
                                                    @foreach (var (sHSetLink, index) in sHLink?.SaftyHazard?.SafetyHazard_Set_Links.Select((link, idx) => (link, idx)))
                                                    {
                                                        <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row") excel-not-skip">
                                                            <td style="border: none;width:15%"></td>
                                                            <td style="border: none;padding-top:10px;font-size:16px;padding-left:55px!important;padding-bottom:8px;width:85%;" colspan="12">
                                                                <span style="padding-right:5px;">@(index + 1).</span><span class="sH-sets">@(new RawString(sHSetLink?.SafetyHazardSet?.SafetyHzControlsText))</span>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                                <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row")">
                                                    <td style="border: none;width:15%"></td>
                                                    <td style="border: none;padding-top:10px;font-size:16px;padding-left:55px!important;padding-bottom:8px;width:85%" colspan="12">
                                                        <span style="font-weight:700;">@("Safety Hazard".ReplaceLabel(Model.ClientSettings_LabelReplacements)) Abatements:</span>
                                                    </td>
                                                </tr>
                                                @if (sHLink?.SaftyHazard?.SafetyHazard_Set_Links.Count() > 0)
                                                {
                                                    @foreach (var (sHSetLink, index) in sHLink?.SaftyHazard?.SafetyHazard_Set_Links.Select((link, idx) => (link, idx)))
                                                    {
                                                        <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row") excel-not-skip">
                                                            <td style="border: none;width:15%"></td>
                                                            <td style="border: none;padding-top:10px;font-size:16px;padding-left:55px!important;padding-bottom:8px;width:85%;" colspan="12">
                                                                <span style="padding-right:5px;">@(index + 1).</span><span class="sH-sets">@(new RawString(sHSetLink?.SafetyHazardSet?.SafetyHzAbatementText))</span>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                                <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row")">
                                                    <td style="border: none;width:15%"></td>
                                                    <td style="border: none;padding-top:10px;font-size:16px;padding-left:55px!important;padding-bottom:8px;width:85%" colspan="12">
                                                        <span style="font-weight:700">Personal Protective Equipment:</span>
                                                    </td>
                                                </tr>
                                                @if (sHLink?.SaftyHazard?.SafetyHazard_Tool_Links.Count() > 0)
                                                {
                                                    @foreach (var sHTool in sHLink?.SaftyHazard?.SafetyHazard_Tool_Links)
                                                    {
                                                        <tr class="@(sHLink?.SaftyHazard?.Active==true ? "" :"expired-row")">
                                                            <td style="border: none;width:15%"></td>
                                                            <td style="border: none;padding-top:10px;font-size:16px;padding-left:55px!important;padding-bottom:8px;width:85%;display:-webkit-box;display:flex;" colspan="12">
                                                                <span style="padding-right:5px;">@sHTool?.Tool?.Number.</span><span class="sH-sets">@sHTool?.Tool?.Name</span>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            }
                                        }
                                    }
                                    <tr></tr>
                                }
                            }
                            <tr></tr>
                        </table>
                    </div>
                    <div class="customized-footer" style="margin:0;padding:0;">*R-R is Reliability Related</div>
                    @if (j != orderedDutyArea.Count())
                    {
                        <div style="display:block; clear:both; page-break-after:always;"></div>
                        <div class="@(j!=0?"strip-dark":"")"></div>
                    }
                    @{
                        j++;
                    }
                }
            </td>
        </tr>
    }
    else
    {
        <tr style="border:none">
            <td style="border:none;text-align:center">
                <i>No data available to generate requested report</i>
            </td>
        </tr>
    }
</table>

<div class="pager pdf-remove" id="pager" style="display: flex; justify-content: flex-start; align-items: center; background-color: white; border-top: 1px solid #d5d3d366; width: 100%; max-width: 100%; overflow-x: auto; position: sticky; bottom: 0; right: 0px; overflow-y: hidden; white-space: nowrap; ">

    @for (int i = 1; i <= orderedDutyArea.Count(); i++)
    {
        <a href=@("#page"+i) class="pagerNumber" style="padding:0.9rem;">@i</a>
    }
</div>
