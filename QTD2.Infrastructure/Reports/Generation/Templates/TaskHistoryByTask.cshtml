@using RazorEngine.Text
@using QTD2.Infrastructure.Reports.Generation
@using QTD2.Infrastructure.ExtensionMethods
<style>
    .table {
        font-family: Roboto, "Helvetica Neue", sans-serif;
        color: #000;
        border-collapse: collapse;
        width: 100%;
    }

    a.pagerNumber {
        text-decoration: none;
        background-color: white;
        color: black;
    }

        a.pagerNumber:hover {
            text-decoration: none;
            background-color: cornflowerblue;
            color: white;
        }

    .strip {
        margin: 10px 0px;
    }

    .strip-container .strip-dark {
        height: 10px;
        background-color: #e8e8e8;
    }

    @@media print {
        .pager {
            display: none !important;
        }

        .strip-container .strip-dark {
            background-color: white;
        }
    }

    .status-active {
        color: black;
    }

    .status-inactive {
        color: red;
    }

</style>

@{
    var orderedVersionTasks = Model.VersionTasks.OrderBy(vt => vt.Task.SubdutyArea.DutyArea.Letter).ThenBy(vt => vt.Task.SubdutyArea.DutyArea.Number).ThenBy(vt => vt.Task.SubdutyArea.SubNumber)
    .ThenBy(vt => vt.Task.Number).ThenByDescending(vt => vt.EffectiveDate);
    var groupedVersionTasks = orderedVersionTasks.GroupBy(vt => vt.TaskId).ToList();
}

<table id="content-table" class="table" style="border-collapse: collapse">
    <tr>
        <td colspan="12" style="vertical-align: middle; text-align: center; border: none !important;padding-bottom:0px">
            <div class="repeatedReportHeader" style="border-bottom: 3px solid #020378;padding-bottom:1px">
                <div style="display: -webkit-box; display: flex; align-items: center; -webkit-box-pack: justify; justify-content: space-between; border-bottom: 3px solid #020378;">
                    @if (!string.IsNullOrEmpty(Model.CompanyLogo))
                    {
                        <div>
                            <img src="@Model.CompanyLogo" alt="Company logo" style="height: 46px;width: 65px;padding-bottom: 10px;float: left;width: 150px !important;height: 65px !important;object-fit: scale-down !important;" />
                        </div>
                    }
                    else
                    {
                        <div></div>
                    }
                    <div style="text-align: center; font-size: 24px; color: #020378;">
                        <b>@Model.Title </b>
                        <h6> <b style="text-align: center; font-family: sans-serif !important; margin-top: 5px; font-size: 18px; color: #020378; padding-bottom: 7px;">@(Model.DateRange != null && Model.DateRange.Any() ? $"{Model.DateRange[0].ToShortDateString()} - {Model.DateRange[1].ToShortDateString()}" : "All Time")</b> </h6>
                    </div>
                    <div><b>Printed Date:</b> @DateTime.Now.ConvertToDefaultTimeZone(Model.DefaultTimeZone).ToShortDateString()</div>
                </div>
            </div>
        </td>
    </tr>


    @if (groupedVersionTasks.Count() > 0)
    {
        <tr>
            <td colspan="12" style="border: 0; padding: 0" class="strip-container">
                @{
                    int j = 1;

                }

                @foreach (var taskGroup in groupedVersionTasks)
                {
                    foreach (var versionTask in taskGroup)
                    {
                        var taskHistories = versionTask.Task_Histories;
                        <div class="@(j % 2 == 0 ? "strip-dark" : "")"></div>
                        <div style="padding:5px;" id="@("page" + j)" class="@(j % 2 == 0 ? "strip" : "")">
                            <table style="width:100% ;border-collapse:collapse;">
                                <tr>
                                    <td colspan="12" style="border:none;">
                                        <table style="width:100%">
                                            <tr>
                                                @if (Model.DisplayColumns.Where(r => r == "Task #").Count() > 0)
                                                {
                                                    <td colspan="5" style="border:none">
                                                        <span><b>@("Task".ReplaceLabel(Model.ClientSettings_LabelReplacements))#</b> : </span>
                                                        <span>@versionTask.Task.SubdutyArea.DutyArea.Letter@versionTask.Task.SubdutyArea.DutyArea.Number.@versionTask.Task.SubdutyArea.SubNumber.@versionTask.Task.Number</span>
                                                    </td>
                                                }
                                                @if (Model.DisplayColumns.Where(r => r == "History Date").Count() > 0)
                                                {
                                                    <td colspan="3" style="border:none;">
                                                        <span><b>History Date</b> : </span>
                                                        <span>@versionTask?.EffectiveDate?.ToShortDateString()</span>
                                                    </td>
                                                }
                                                @if (Model.DisplayColumns.Where(r => r == "Username").Count() > 0)
                                                {
                                                    <td colspan="4" style="border:none; text-align:right" ;>
                                                        <span><b>UserName:</b></span>
                                                        <span>@versionTask?.CreatedBy</span>
                                                    </td>
                                                }
                                            </tr>
                                            <tr>
                                                @if (Model.DisplayColumns.Where(r => r == "Task Description").Count() > 0)
                                                {
                                                    <td colspan="12" style="border:none; padding-top:1rem;">
                                                        <b>@("Task".ReplaceLabel(Model.ClientSettings_LabelReplacements)) Description:</b>
                                                        <span>@versionTask.Description</span>
                                                    </td>
                                                }
                                            </tr>
                                            <tr>
                                                @if (Model.DisplayColumns.Where(r => r == "R-R").Count() > 0)
                                                {
                                                    <td colspan="12" style="border:none; padding-top:1rem;">
                                                        <b>R-R:</b>
                                                        <span>@(versionTask.IsReliability ? "Yes" : "No")</span>
                                                    </td>
                                                }
                                            </tr>
                                            <tr>
                                                @if (Model.DisplayColumns.Where(r => r == "Status (Active/Inactive)").Count() > 0)
                                                {
                                                    <td colspan="12" style="border:none; padding-top:1rem;">
                                                        <b>Status:</b>
                                                        <span class="@(versionTask.TaskActive ? "status-active" : "status-inactive")">@(versionTask.TaskActive ? "Active" : "Inactive")</span>
                                                    </td>
                                                }
                                            </tr>
                                            <tr>
                                                @if (Model.DisplayColumns.Where(r => r == "Requalification Required").Count() > 0)
                                                {
                                                    <td colspan="12" style="border:none; padding-top:1rem;">
                                                        <b>Requalification Required:</b>
                                                        <span>@(versionTask?.RequalificationRequired ?? false ? "Yes" : "No")</span>
                                                    </td>
                                                }
                                            </tr>
                                            <tr>
                                                @if (Model.DisplayColumns.Where(r => r == "Requalification Due Date").Count() > 0)
                                                {
                                                    <td colspan="12" style="border:none; padding-top:1rem;">
                                                        <b>Requalification Due Date:</b>
                                                        <span>@(versionTask?.RequalificationDueDate?.ToShortDateString() ?? "N/A")</span>
                                                    </td>
                                                }
                                            </tr>
                                            <tr>
                                                @if (Model.DisplayColumns.Contains("Revision Summary"))
                                                {
                                                    <td colspan="12" style="border:none; padding-top:1rem;">
                                                        <div style="display: -webkit-box; display:flex">
                                                            <div><b>Revision Summary:</b></div>
                                                            <div style="border:none; padding-left:0.5rem;">
                                                                @foreach (var taskHistory in taskHistories)
                                                                {
                                                                    <p>@taskHistory.ChangeNotes</p>
                                                                }
                                                            </div>
                                                        </div>
                                                    </td>
                                                }
                                            </tr>


                                            <tr>
                                                @if (Model.DisplayColumns.Where(r => r == "Notes").Count() > 0)
                                                {
                                                    <td colspan="12" style="border:none; padding-top:1rem;">
                                                        <b>Notes:</b>
                                                        <span>@versionTask?.RequalificationNotes</span>
                                                    </td>
                                                }
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    }
                    @if (taskGroup != groupedVersionTasks.Last())
                    {
                        <div style="page-break-after:always"></div>
                        <div class="@(j % 2 == 0 ? "strip-dark" : "")"></div>
                    }

                    @{
                        j++;
                    }
                }

            </td>
        </tr>
    }
    else
    {
        <tr style="border:none">
            <td style="border:none;text-align:center">
                <i>No data available to generate requested report</i>
            </td>
        </tr>
    }
</table>

<div class="pager pdf-remove" id="pager" style="display: flex; justify-content: flex-start; align-items: center; background-color: white; border-top: 1px solid #d5d3d366; width: 100%; max-width: 100%; overflow-x: auto; position: sticky; bottom: 0; right: 0px; overflow-y: hidden; white-space: nowrap; ">

    @for (int i = 1; i <= groupedVersionTasks.Count(); i++)
    {
        <a href=@("#page"+i) class="pagerNumber" style="padding:0.9rem;">@i</a>
    }
</div>
