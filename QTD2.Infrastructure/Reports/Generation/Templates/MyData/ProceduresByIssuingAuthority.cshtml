@using RazorEngine.Text
@using QTD2.Infrastructure.Reports.Generation
@using QTD2.Infrastructure.ExtensionMethods
<style>
    .table {
        font-family: Roboto, "Helvetica Neue", sans-serif;
        color: #000;
        border-collapse: collapse;
        width: 100%;
    }

    a.pagerNumber {
        text-decoration: none;
        background-color: white;
        color: black;
    }

        a.pagerNumber:hover {
            text-decoration: none;
            background-color: cornflowerblue;
            color: white;
        }

    .strip {
        margin: 10px 0px;
    }

    .strip-container .strip-dark {
        height: 10px;
        background-color: #e8e8e8;
    }

    @@media print {
        .pager {
            display: none !important;
        }

        .strip-container .strip-dark {
            background-color: white;
        }
    }

    tr.open-border-table-row th:first-child, tr.open-border-table-row td:first-child {
        padding-left: 0px !important;
        border-left: 0 !important;
    }

    tr.open-border-table-row th:last-child {
        border-right: 0 !important;
    }

    .expired-row {
        color: lightgray;
        font-style: italic;
    }
</style>
@{
    var groupedProcedures = Model.Procedures.GroupBy(p => p.Procedure_IssuingAuthority);

    var sortedGroupedProcedures = groupedProcedures.Select(g =>
        new
        {
            Authority = g.Key,
            Procedures = g.OrderBy(p => p.Number)
        });
}
<table id="content-table" class="table" style="border-collapse: collapse">
    <tr>
        <td colspan="12" style="vertical-align: middle; text-align: center; border: none !important;padding-bottom:0px">
            <div class="repeatedReportHeader" style="border-bottom: 3px solid #020378;padding-bottom:1px">
                <div style="display: -webkit-box; display: flex; align-items: center; -webkit-box-pack: justify; justify-content: space-between; border-bottom: 3px solid #020378;">
                    @if (!string.IsNullOrEmpty(Model.CompanyLogo))
                    {
                        <div>
                            <img src="@Model.CompanyLogo" alt="Company logo" style="height: 46px;width: 65px;padding-bottom: 10px;float: left;width: 150px !important;height: 65px !important;object-fit: scale-down !important;" />
                        </div>
                    }
                    else
                    {
                        <div></div>
                    }
                    <div style="text-align: center; font-size: 24px; color: #020378;">
                        <b>@Model.Title </b>
                    </div>
                    <div><b>Printed Date:</b> @DateTime.Now.ConvertToDefaultTimeZone(Model.DefaultTimeZone).ToShortDateString()</div>
                </div>
            </div>
        </td>
    </tr>


    @if (sortedGroupedProcedures.Count() > 0)
    {
        <tr>
            <td colspan="12" style="border: 0; padding: 0" class="strip-container">
                @{
                    int j = 1;
                }

                @foreach (var group in sortedGroupedProcedures)
                {
                    <div class="@(j % 2 == 0 ? "strip-dark" : "")"></div>
                    <div style="padding:5px;" id="@("page" + j)" class="@(j % 2 == 0 ? "strip" : "")">
                        <table class="table">
                            <tr>
                                <td colspan="12" style="border:none">
                                    <span style="font-size:1rem;"><b>Issuing Authority:</b> </span>
                                    <span>@group.Authority.Title</span>
                                </td>
                            </tr>
                        </table>
                        <div>
                            <table style="width:100%; border:0;border-collapse:collapse;font-size:1rem;margin-bottom:1rem">
                                <thead>
                                    <tr class="open-border-table-row">
                                        @if (Model.DisplayColumns.Where(r => r == "Procedure Number").Count() > 0)
                                        {
                                            <th style=" border: 1px solid;padding: 5px;width:20%" align="left">
                                                @("Procedure".ReplaceLabel(Model.ClientSettings_LabelReplacements)) #
                                            </th>
                                        }
                                        @if (Model.DisplayColumns.Where(r => r == "Procedure Title").Count() > 0)
                                        {
                                            <th align="left" style=" border: 1px solid; padding: 5px; width: 20% ">
                                                @("Procedure".ReplaceLabel(Model.ClientSettings_LabelReplacements)) Title
                                            </th>
                                        }
                                        @if (Model.DisplayColumns.Where(r => r == "Revision Number").Count() > 0)
                                        {
                                            <th align="left" style=" border: 1px solid; padding: 5px; width: 15% ">
                                                Revision Number
                                            </th>
                                        }
                                        @if (Model.DisplayColumns.Where(r => r == "Effective Date").Count() > 0)
                                        {
                                            <th align="left" style=" border: 1px solid; padding: 5px; width: 15% ">
                                                Effective Date
                                            </th>
                                        }
                                        @if (Model.DisplayColumns.Where(r => r == "PDF linked").Count() > 0)
                                        {
                                            <th align="left" style=" border: 1px solid; padding: 5px; width: 15% ">
                                                PDF linked
                                            </th>
                                        }
                                        @if (Model.DisplayColumns.Where(r => r == "Hyperlink Linked").Count() > 0)
                                        {
                                            <th align="left" style=" border: 1px solid; padding: 5px; width: 15% ">
                                                Hyperlink Linked
                                            </th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var procedure in group.Procedures)
                                    {
                                        <tr class="open-border-table-row @(!procedure.Active ? "expired-row" : "")">
                                            @if (Model.DisplayColumns.Where(r => r == "Procedure Number").Count() > 0)
                                            {
                                                <td style="border: none; border-right:1px Solid #000; border-bottom: 1px solid #000; padding: 5px;width: 20%  ">@procedure.Number</td>
                                            }

                                            @if (Model.DisplayColumns.Where(r => r == "Procedure Title").Count() > 0)
                                            {
                                                <td style="border: none; border-right:1px Solid #000; border-bottom: 1px solid #000; padding: 5px;width: 20%  ">@procedure.Title</td>
                                            }
                                            @if (Model.DisplayColumns.Where(r => r == "Revision Number").Count() > 0)
                                            {
                                                <td style="border: none; border-right:1px Solid #000; border-bottom: 1px solid #000; padding: 5px;width: 15%  ">@procedure.RevisionNumber</td>
                                            }
                                            @if (Model.DisplayColumns.Where(r => r == "Effective Date").Count() > 0)
                                            {
                                                <td style="border: none; border-right:1px Solid #000; border-bottom: 1px solid #000; padding: 5px; width: 15%">@procedure.EffectiveDate.ToString(Model.DefaultDateFormat)</td>
                                            }
                                            @if (Model.DisplayColumns.Where(r => r == "PDF linked").Count() > 0)
                                            {
                                                <td style="border: none; border-right:1px Solid #000; border-bottom: 1px solid #000; padding: 5px; width: 15%;">
                                                    @(procedure.ProceduresFileUpload != null && procedure.ProceduresFileUpload.Length > 0 ? "X" : "")
                                                </td>
                                            }
                                            @if (Model.DisplayColumns.Where(r => r == "Hyperlink Linked").Count() > 0)
                                            {
                                                <td style="border: none; border-bottom: 1px solid #000; padding: 5px;width: 15%;">
                                                    @(procedure.Hyperlink != null && !string.IsNullOrWhiteSpace(procedure.Hyperlink) ? "X" : "")
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                                <tr></tr>
                            </table>
                        </div>
                    </div>

                    @if (!group.Equals(sortedGroupedProcedures.Last()))
                    {
                        <div style="page-break-after:always"></div>
                        <div class="@(j % 2 == 0 ? "strip-dark" : "")"></div>
                    }

                    @{
                        j++;
                    }
                }

            </td>
        </tr>
    }
    else
    {
        <tr style="border:none">
            <td style="border:none;text-align:center">
                <i>No data available to generate requested report</i>
            </td>
        </tr>
    }
</table>

<div class="pager pdf-remove" id="pager" style="display: flex; justify-content: flex-start; align-items: center; background-color: white; border-top: 1px solid #d5d3d366; width: 100%; max-width: 100%; overflow-x: auto; position: sticky; bottom: 0; right: 0px; overflow-y: hidden; white-space: nowrap; ">

    @for (int i = 1; i <= sortedGroupedProcedures.Count(); i++)
    {
        <a href=@("#page"+i) class="pagerNumber" style="padding:0.9rem;">@i</a>
    }
</div>
