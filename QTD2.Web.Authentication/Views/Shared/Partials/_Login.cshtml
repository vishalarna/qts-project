@model QTD2.Web.Authentication.Models.LoginModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@if (!ViewData.ModelState.IsValid)
{
    <div asp-validation-summary="All" class=" alert alert-danger" role="alert"></div>
}
<div class="relative sm:w-2/6 mx-auto" style="padding-top:2rem">

    <!-- Forms card starts here -->
    <div class="bg-white shadow-md rounded px-12 py-12 ">
        <h1 class="text-2xl font-semibold text-gray-900">@Localizer["LoginViewHeader"]</h1>

        <!-- form starts here -->
        <form class="block text-sm" asp-action="Login" asp-controller="Login" method="post">
            @Html.AntiForgeryToken()
            <div class="mt-6">
                <label class="block text-gray-700 font-medium ">@Localizer["Username"]</label>
                @Html.TextBoxFor(r => r.UserName, new { @class = "text-base border w-full h-5 px-4 py-6 mt-2 hover:outline-none focus:outline-none focus:ring focus:ring-offset-2 focus:ring-green-900 focus:ring-opacity-50 rounded" })
            </div>

            <div class="mt-6">
                <label class="inline-block text-gray-700 font-medium">@Localizer["Password"]</label>
                <a asp-controller="ForgotPassword" asp-action="Index" class="float-right hover:underline text-green-800">@Localizer["ForgotYourPassword"]</a>
                @Html.TextBoxFor(r => r.Password, new { @class = "text-base border w-full h-5 px-4 py-6 mt-2 hover:outline-none focus:outline-none focus:ring focus:ring-offset-2 focus:ring-green-900 focus:ring-opacity-50 rounded" })
            </div>

            <div class="inline-flex items-center mt-6">
                <input type="checkbox" class="h-3 w-3 rounded-sm text-green-800 form-checkbox focus:outline-none focus:ring focus:ring-offset-2 focus:ring-green-900 focus:ring-opacity-50">
                <span class="text-gray-500 ml-2">@Localizer["RememberMeInstructions"]</span>
            </div>
            @Html.HiddenFor(r => r.Redirect)
            <input type="submit" value="Login" class="btn-primary mt-6 text-center" />

        </form>
        <!-- form ends here -->
    </div>
    <!-- Forms card ends here -->
    <!-- privacy terms starts here-->
    <div class="mt-6 text-xs text-gray-500 text-center">
        <a href="">Privacy and terms</a>
    </div>
    <!-- privacy and terms ends here -->

</div>
