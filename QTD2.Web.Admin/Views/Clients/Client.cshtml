@model QTD2.Domain.Entities.Authentication.Client

<h4>@Model.Name</h4>

<div class="row">
    <div class="col-lg-6">
        <h3>Users</h3>
    </div>

    <div class="col-lg-6">
        <h3>Add A User</h3>

        <div class="row">
            <div class="col-lg-8">
                <select id="users-select" class="form-control">
                    <option>Nik</option>
                </select>
            </div>
            <div class="col-lg-4">
                <button class="btn btn-primary">Add</button>
            </div>
        </div>

        <hr />

        <h3>Add By Email Address</h3>
        <div class="row">
            <div class="col-lg-8">
                <input type="text" class="form-control" />
            </div>
            <div class="col-lg-4">
                <button class="btn btn-primary">Add</button>
            </div>
        </div>

    </div>
</div>


@section Scripts
{
    <script>
        // prabhu - you can remove this, this is just for my testing.
        $(document).ready(function () {
            $.get('@Url.Action("Get", "Users")', function (data) {                             

                $.each(data, function (i, item) {
                    $('#users-select').append(`<option>${item.name}</option>`)
                })
            });
        });
    </script>
}
